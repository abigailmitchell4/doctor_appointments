<h1 class="bluecolor2"><%= @doctor.full_name %>
<%= link_to 'Add appointment', new_doctor_appointment_path(@doctor), class:"ui basic orange small button right floated" %></h1>
<hr />

<h2 class="orange1">Appointments</h2>
<div class="ui list">
  <% @appointments.each do |a| %>
    <li class="list item ui header small bluecolor2"">
      <%= a.patient.full_name %>
      <br />
      <%= link_to 'Remove', doctor_appointment_path(@doctor, a), method: :delete %>
    </li>
  <% end %>
</ul>
